<Window x:Class="Poe_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Poe_Launcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1220" WindowStartupLocation="CenterScreen">
    <Grid>
        <WebBrowser x:Name="Poe_Browser" HorizontalAlignment="Left" Height="420" Margin="160,0,0,-1" VerticalAlignment="Top" Width="1040"/>
        <Button x:Name="start_btn" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="160" Height="125" Margin="0,140,0,0" Style="{DynamicResource ButtonStyle1}" Click="Start_btn_Click">            
            <Button.Background>
                <ImageBrush ImageSource="Images/Poe_Icon.jpg" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="path_btn" Content="Set Path" HorizontalAlignment="Left" Margin="40,390,0,0" VerticalAlignment="Top" Width="75" Click="Path_btn_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="108" Margin="10,7,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145" Visibility="Hidden"/>

    </Grid>
</Window>
